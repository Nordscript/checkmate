<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#53A0FD"
    android:columnCount="1" >

    <LinearLayout
        android:id="@+id/selectTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/select"
        android:layout_width="266dp"
        android:layout_height="90dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="3"
        android:background="@color/cmateDBlue"
        android:text="@string/resto1"
        android:textColor="@color/cmateWhite"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/search_name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:background="@color/cmateBlue"
        android:ems="10"
        android:hint="@string/hint_name"
        android:paddingLeft="5dp"
        android:textColorHint="@color/cmateWhite"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="87dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="1"
        android:background="@color/cmateDBlue"
        android:height="40dp"
        android:text="@string/button_search"
        android:textColor="@color/cmateWhite"
        android:textSize="20dp" />

</GridLayout>